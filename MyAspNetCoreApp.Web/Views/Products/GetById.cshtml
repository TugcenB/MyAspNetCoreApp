@{
    ViewData["Title"] = "GetById";
}

@model ProductViewModel

<a class="btn btn-primary mb-3" asp-controller="products" asp-action="index">ürünler sayfasına git</a>

<div class="card">
    <div class="card-header">
        @Model.Name
    </div>
    <div class="card-body">
        <p class="card-text">
            <div>Description: @Model.Description</div>
            <div>Price: @Model.Price</div>
            <div>Stock: @Model.Stock</div>
            <div>Color: @Model.Color</div>

        </p>
    </div>
</div>