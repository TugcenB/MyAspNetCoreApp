
@{
    ViewData["Title"] = "Pages";
}

@model List<ProductViewModel>

<h1>Pages</h1>
<h2>page: @ViewBag.page</h2>
<h2>pageSize: @ViewBag.pageSize</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Color</th>
            <th>IsPublish</th>
            <th>Expire(Month)</th>
            <th>Description</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Color</td>
                <td>
                    @(@item.IsPublish ? "Yes" : "No")
                    @*@if(@item.IsPublish){
                <text>Yes</text>
                }
                else{
                <text>No</text>
                }*@
                </td>
                <td>@item.Expire</td>
                <td>
                    @if (@item.Description.Length > 20)
                    {
                        @item.Description.Substring(0,20)

                        <text> ...</text>
                    }
                    else
                    {
                        @item.Description
                    }
                </td>
                <td>
                    <a asp-controller="products" asp-action="remove" asp-route-id="@item.Id">Remove</a>
                    <a asp-controller="products" asp-action="update" asp-route-id="@item.Id">Update</a>
                    <a asp-controller="products" asp-action="getbyid" asp-route-productid="@item.Id">Ürün sayfasına git</a>
                </td>
            </tr>
        }
    </tbody>
</table>